@using BlazorApp.Models
<div class="max-w-sm bg-white shadow-md rounded-2xl p-4 m-2">
    <h2 class="text-lg font-semibold mb-2">@product.Name</h2>
    <p class="text-gray-700 mb-2">
        <b class="font-medium">Pris:</b> @product.Price
    </p>
    <p class="text-gray-700 mb-2">
        <b class="font-medium">Publiseret:</b> @product.PublishedDate.ToShortDateString()
    </p>
    <p class="text-gray-600 mt-2">
        <b class="font-medium">Beskrivelse:</b> @product.Description
    </p>
    <p class="text-gray-600 mt-2">
        <b class="font-medium">Materiale:</b> @product.Material
    </p>
</div>

@code {
    [Parameter, EditorRequired]
    public Product product { get; set; }
}
