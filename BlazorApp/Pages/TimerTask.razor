@page "/to-do"
@using BlazorApp.Shared
@using System.Linq 


<RadzenTable>
    <RadzenColumn>
        @foreach (var todo in Tasks)
        {
            <RenderTimeTask Task=@todo OnMinutesChanged="@(newTime => UpdateTime(@todo, newTime))"></RenderTimeTask>
        }
    </RadzenColumn>
</RadzenTable>

<RadzenFormField Text="Add task to to-do" @* Variant="@variant" *@>
    <RadzenTextBox @* @bind-Value="@value" *@ />
</RadzenFormField>
<RadzenButton @* Click="AddTask()" *@>Submit</RadzenButton>